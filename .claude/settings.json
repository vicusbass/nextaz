{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "npx prettier --write \"$TOOL_INPUT_file_path\" 2>/dev/null || true"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "if echo \"$TOOL_INPUT_file_path\" | grep -qE '\\.env($|\\.)'; then echo 'BLOCKED: Cannot edit .env files - contains secrets' >&2; exit 2; fi"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(npm run build:*)",
      "Bash(npm run dev:*)",
      "Bash(npm run format:*)",
      "Bash(npm install:*)",
      "Bash(npm uninstall:*)",
      "Bash(npm cache clean:*)",
      "Bash(git status:*)",
      "Bash(git push)"
    ]
  }
}
