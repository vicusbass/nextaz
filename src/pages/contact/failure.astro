---
import Layout from '../../layouts/Layout.astro';

const errorMessages: Record<string, string> = {
  missing_fields: 'Te rugăm să completezi toate câmpurile obligatorii.',
  send_failed: 'Nu am putut trimite mesajul. Te rugăm să ne contactezi direct.',
  server_error: 'A apărut o eroare. Te rugăm să ne contactezi direct.',
};

const errorParam = Astro.url.searchParams.get('error') || 'server_error';
const errorMessage = errorMessages[errorParam] || errorMessages.server_error;
---

<Layout title="Eroare - Nextaz">
  <div
    class="mx-auto flex min-h-[60vh] max-w-lg flex-col items-center px-8 pt-40 pb-20 text-center lg:pt-60"
  >
    <div class="mb-8 text-6xl">&#10007;</div>
    <h1 class="mb-6 text-4xl font-bold lg:text-5xl">Ceva nu a mers bine</h1>
    <p class="text-gray-dark mb-10 text-lg lg:text-xl">
      {errorMessage}
    </p>

    <div class="mb-10 flex flex-col gap-4 text-lg">
      <a href="mailto:contact@nextaz.ro" class="text-black underline hover:no-underline">
        contact@nextaz.ro
      </a>
      <a href="tel:0755123456" class="text-black underline hover:no-underline"> 0755 123 456 </a>
      <a
        href="https://wa.me/40755123456"
        target="_blank"
        rel="noopener"
        class="text-black underline hover:no-underline"
      >
        WhatsApp
      </a>
      <p class="text-gray-dark">Strada Mureșului 5, Cluj-Napoca</p>
    </div>

    <a
      href="/"
      class="inline-block border border-black px-10 py-4 text-lg font-medium text-black transition-all hover:bg-gray-100"
    >
      Pagina principală
    </a>
  </div>
</Layout>
