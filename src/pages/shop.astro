---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import heroImage from '../assets/shop/wine-hero.png';
---

<Layout title="Shop | Nextaz">
  <section class="flex flex-col lg:flex-row bg-gray-light overflow-hidden pt-20 lg:pt-10 px-0 lg:px-30">
    <div class="flex flex-col items-center text-center lg:items-start lg:text-left justify-center py-8 sm:py-12 lg:py-16 order-2 lg:order-0">
      <h1 class="text-7xl lg:text-9xl font-bold leading-none mb-4 lg:mb-12">Shop</h1>
      <h2 class="text-3xl lg:text-5xl font-bold leading-none mb-6">Alege vinul tău preferat</h2>
      <p class="text-lg lg:text-xl text-gray-dark lg:text-black leading-relaxed max-w-[600px] px-6 lg:px-0">
        Descoperă gama Nextaz și comandă vinuri pentru acasă, cadouri,
        petreceri sau evenimente speciale.
      </p>
    </div>
    <div class="flex items-center justify-center lg:justify-end lg:flex-1 h-[40vh] sm:h-[50vh] lg:h-auto">
      <Image 
        src={heroImage} 
        alt="Vinuri Nextaz - selecție de vinuri albe și rosé" 
        class="w-full h-full object-cover object-center lg:object-left lg:scale-125 lg:origin-right"
      />
    </div>
  </section>
</Layout>