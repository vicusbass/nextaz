---
import Layout from '../../layouts/Layout.astro';

const orderId = Astro.url.searchParams.get('orderId');
const errorMessage = Astro.url.searchParams.get('error');
---

<Layout title="Plată eșuată | Nextaz">
  <section class="payment-page bg-white px-6 pt-32 pb-16 lg:px-30 lg:pt-40 lg:pb-24">
    <div class="payment-content">
      <div class="failure-icon">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10" />
          <path d="M15 9l-6 6M9 9l6 6" />
        </svg>
      </div>

      <h1 class="text-3xl font-bold text-black lg:text-5xl">
        Plata nu a reușit
      </h1>

      {orderId && (
        <p class="order-id">
          Comanda: <strong>#{orderId}</strong>
        </p>
      )}

      <p class="failure-message">
        {errorMessage || 'Plata nu a putut fi procesată. Te rugăm să încerci din nou sau să folosești o altă metodă de plată.'}
      </p>

      <div class="actions">
        <a href="/checkout" class="btn-primary">
          Încearcă din nou
        </a>
        <a href="/cart" class="btn-secondary">
          Înapoi la coș
        </a>
      </div>

      <p class="help-text">
        Ai nevoie de ajutor? <a href="/contact">Contactează-ne</a>
      </p>
    </div>
  </section>
</Layout>

<style>
  .payment-page {
    min-height: calc(100vh - 200px);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .payment-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 1.5rem;
    max-width: 500px;
  }

  .failure-icon {
    width: 5rem;
    height: 5rem;
    color: #dc2626;
  }

  .failure-icon svg {
    width: 100%;
    height: 100%;
  }

  .order-id {
    font-size: 1.125rem;
    color: #6e6e6e;
    margin: 0;
  }

  .order-id strong {
    color: #000;
  }

  .failure-message {
    font-size: 1rem;
    color: #6e6e6e;
    line-height: 1.6;
    margin: 0;
  }

  .actions {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: 100%;
    margin-top: 1rem;
  }

  .btn-primary {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    padding: 1rem;
    background: #000;
    color: #fff;
    font-size: 1rem;
    font-weight: 500;
    text-decoration: none;
    transition: background 0.2s;
  }

  .btn-primary:hover {
    background: #262626;
  }

  .btn-secondary {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    padding: 1rem;
    background: transparent;
    color: #000;
    font-size: 1rem;
    font-weight: 500;
    text-decoration: none;
    border: 1px solid #e5e5e5;
    transition: border-color 0.2s;
  }

  .btn-secondary:hover {
    border-color: #000;
  }

  .help-text {
    font-size: 0.875rem;
    color: #6e6e6e;
    margin: 0;
  }

  .help-text a {
    color: #000;
    text-decoration: underline;
  }

  @media (min-width: 1024px) {
    .failure-icon {
      width: 6rem;
      height: 6rem;
    }

    .actions {
      flex-direction: row;
      justify-content: center;
      gap: 1rem;
    }

    .btn-primary,
    .btn-secondary {
      width: auto;
      min-width: 200px;
    }
  }
</style>
